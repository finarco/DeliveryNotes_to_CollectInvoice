# Environment Variables for DeliveryNotes_to_CollectInvoice
# Copy this file to .env and fill in your values
# Environment variables take precedence over config.yaml

# Application settings
APP_SECRET_KEY=your-secret-key-here
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Database
DATABASE_URI=sqlite:///delivery_notes.db

# Email settings
EMAIL_ENABLED=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASSWORD=your-smtp-password
EMAIL_SENDER=noreply@example.com
EMAIL_OPERATOR_CC=operator@example.com

# Superfaktura API
SUPERFAKTURA_ENABLED=false
SUPERFAKTURA_API_EMAIL=api@example.com
SUPERFAKTURA_API_KEY=your-api-key
SUPERFAKTURA_COMPANY_ID=12345
SUPERFAKTURA_BASE_URL=https://api.superfaktura.sk

# GoPay payment gateway
GOPAY_ENABLED=false
GOPAY_GOID=your-goid
GOPAY_CLIENT_ID=your-client-id
GOPAY_CLIENT_SECRET=your-client-secret
GOPAY_GATEWAY_URL=https://gw.sandbox.gopay.com/api

# Config file path (optional)
# CONFIG_PATH=config.yaml
